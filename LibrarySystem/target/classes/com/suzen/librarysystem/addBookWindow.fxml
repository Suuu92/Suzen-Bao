<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.suzen.librarysystem.AddBookWindow">
   <children>
      <Label layoutX="185.0" layoutY="46.0" text="Add a Book">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <VBox layoutX="109.0" layoutY="131.0" prefHeight="212.0" prefWidth="282.0" spacing="2.0">
         <children>
            <TextField fx:id="textTitle" prefHeight="38.0" prefWidth="271.0" promptText="Title">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="textAuthor" prefHeight="38.0" prefWidth="271.0" promptText="Author">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="textGenre" prefHeight="38.0" prefWidth="285.0" promptText="Genre">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="textQuantity" prefHeight="38.0" prefWidth="271.0" promptText="Quantity">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="textID" prefHeight="38.0" prefWidth="271.0" promptText="ID">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <Button fx:id="addAndCloseButton" layoutX="221.0" layoutY="354.0" mnemonicParsing="false" onAction="#getBookInfo" text="Add">
         <font>
            <Font size="19.0" />
         </font>
      </Button>
      <Label layoutX="108.0" layoutY="98.0" text="Enter the following information of the book:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
