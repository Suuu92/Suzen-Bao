<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.suzen.librarysystem.SignUpWindow">
   <children>
      <HBox alignment="CENTER" layoutX="147.0" layoutY="50.0" prefHeight="72.0" prefWidth="200.0">
         <children>
            <Label contentDisplay="CENTER" text="Sign Up">
               <font>
                  <Font size="33.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox alignment="CENTER" layoutX="85.0" layoutY="134.0" prefHeight="188.0" prefWidth="323.0" spacing="10.0">
         <children>
            <TextField fx:id="textFirstName" prefHeight="47.0" prefWidth="323.0" promptText="First Name">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="textLastName" prefHeight="47.0" prefWidth="323.0" promptText="Last Name">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="textPinNum" prefHeight="47.0" prefWidth="323.0" promptText="Pin Number">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <Button layoutX="204.0" layoutY="356.0" mnemonicParsing="false" onAction="#createUser" text="Sign up ">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
